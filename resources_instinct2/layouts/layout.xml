<layout id="MainLayout">
    <drawable id="TimerMin" class="DrawTimerMin">
        <param name="baseX">70</param>
        <param name="baseY">2</param>
        <param name="minFont">Graphics.FONT_SYSTEM_NUMBER_THAI_HOT</param>
        <param name="minAlign">Graphics.TEXT_JUSTIFY_RIGHT</param>
        <param name="xGap">3</param>
        <param name="unitStr">"min."</param>
        <param name="unitS">"m"</param>
        <param name="unitFont">Graphics.FONT_MEDIUM</param>
        <param name="unitAlign">Graphics.TEXT_JUSTIFY_LEFT</param>
        <param name="foreground">Graphics.COLOR_WHITE</param>
        <param name="background">Graphics.COLOR_TRANSPARENT</param>
    </drawable>
    <drawable id="ProgressCircle" class="DrawProgressCircle">
        <param name="centerX">dc.getWidth() - 27</param>
        <param name="centerY">27</param>
        <param name="radius">20</param>
        <param name="bold">15</param>
        <param name="clock">Graphics.ARC_COUNTER_CLOCKWISE</param>
        <param name="start">90</param>
        <param name="font">Graphics.FONT_SMALL</param>
        <param name="foreground">Graphics.COLOR_WHITE</param>
        <param name="background">Graphics.COLOR_TRANSPARENT</param>
    </drawable>
    <drawable id="statusIcon" class="DrawStatusIcon">
        <param name="iconX">5</param>
        <param name="iconY">20</param>
    </drawable>
    <drawable id="positionIndicator" class="DrawPositionIndicator">
        <param name="posX">dc.getWidth() / 2</param>
        <param name="posY">dc.getWidth() - 35</param>
        <param name="font">Graphics.FONT_SYSTEM_XTINY</param>
        <param name="align">Graphics.TEXT_JUSTIFY_CENTER</param>
        <param name="foreground">Graphics.COLOR_WHITE</param>
        <param name="background">Graphics.COLOR_TRANSPARENT</param>
    </drawable>
    <drawable id="timeRecord" class="DrawTimeRecord">
        <param name="posX">dc.getWidth() / 2</param>
        <param name="posY">55</param>
        <param name="font">Graphics.FONT_SYSTEM_XTINY</param>
        <param name="align">Graphics.TEXT_JUSTIFY_CENTER</param>
        <param name="foreground">Graphics.COLOR_WHITE</param>
        <param name="background">Graphics.COLOR_TRANSPARENT</param>
    </drawable>
    <drawable id="speedIndicator" class="DrawSpeedIndicator">
        <param name="speedX">70</param>
        <param name="speedY">70</param>
        <param name="speedFont">Graphics.FONT_SYSTEM_NUMBER_HOT</param>
        <param name="speedAlign">Graphics.TEXT_JUSTIFY_RIGHT</param>
        <param name="xGap">3</param>
        <param name="unitStr">"kt"</param>
        <param name="unitFont">Graphics.FONT_MEDIUM</param>
        <param name="unitAlign">Graphics.TEXT_JUSTIFY_LEFT</param>
        <param name="foreground">Graphics.COLOR_WHITE</param>
        <param name="background">Graphics.COLOR_TRANSPARENT</param>
    </drawable>
    <drawable id="headingIndicator" class="DrawHeadingIndicator">
        <param name="headX">dc.getWidth() - 40</param>
        <param name="headY">95</param>
        <param name="radius">15</param>
        <param name="bold">10</param>
        <param name="font">Graphics.FONT_SYSTEM_XTINY</param>
        <param name="foregroundStr">Graphics.COLOR_WHITE</param>
        <param name="foregroundArc">Graphics.COLOR_LT_GRAY</param>
        <param name="background">Graphics.COLOR_TRANSPARENT</param>
    </drawable>
    <drawable id="fastestIndicator" class="DrawFastestIndicator">
        <param name="speedX">60</param>
        <param name="speedY">110</param>
        <param name="speedFont">Graphics.FONT_XTINY</param>
        <param name="speedAlign">Graphics.TEXT_JUSTIFY_RIGHT</param>
        <param name="xGap">3</param>
        <param name="unitStr">"kt"</param>
        <param name="unitFont">Graphics.FONT_SYSTEM_XTINY</param>
        <param name="unitAlign">Graphics.TEXT_JUSTIFY_LEFT</param>
        <param name="foreground">Graphics.COLOR_WHITE</param>
        <param name="background">Graphics.COLOR_TRANSPARENT</param>
    </drawable>
</layout>